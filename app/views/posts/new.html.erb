<h1>New Post</h1>

<form action="/posts" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <label for="description">Description</label>
  <input id="description" type="text" name="post[description]">

  <br>
  <label for="food_id">Food ID</label>
  <input id="food_id" type="text" name="post[food_id]">

  <br>
  <label for="price">Price</label>
  <input id="price" type="text" name="post[price]">

  <br>
  <label for="score_id">Score ID</label>
  <input id="score_id" type="text" name="post[score_id]">

  <br>
  <button>Submit</button>

</form>

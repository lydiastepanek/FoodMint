<h1>New Post</h1>

<form>

  <label for="description">Description</label>
  <input id="description" type="text" name="description" value="<%= post.escape('description') %>">

  <br>
  <label for="location">Location</label>
  <input id="location" type="text" name="location" value="<%= post.escape('location') %>">

  <br>

  <label for="food_id">Food Type</label>
  <select id="food_id" name="food_id">
      <% _.each(LsFinalproject.all_food_types, function(foodType) { %>
          <option value="<%= foodType.id %>">
            <%= foodType.title %>
          </option>
      <% }) %>
  </select>

  <br>
  <label for="price">Price</label>
  <input id="price" type="decimal" name="price"  value="<%= post.escape('price') %>" pattern="^\\$?(([1-9](\\d*|\\d{0,2}(,\\d{3})*))|0)(\\.\\d{1,2})?$">

  <br>
  <label for="score_id">Score</label>
  <input id="score_id" type="radio" name="score_id" value="5">1
  <input id="score_id" type="radio" name="score_id" value="4">2
  <input id="score_id" type="radio" name="score_id" value="3">3
  <input id="score_id" type="radio" name="score_id" value="2">4
  <input id="score_id" type="radio" name="score_id" value="1">5

    <!-- selector ~ selector
    radio button with star as background image
    background position will move it
    if something is checked, anything after it not starred -->

  <ul>
  <% post.ratings().each(function (rating) { %>
    <li>
    <%= rating.get("user_name") %>
    <%= rating.get("score") %>
    </li>
  <% }) %>
  </ul>


  <p>Your rating</p>
  <div id="user_star"></div>

  <br>
  <label for="qty">Quantity of meals provided</label>
  <input id="qty" type="number"  value="<%= post.escape('num_meals') %>" name="num_meals">

    <br>
  <button>Submit</button>

</form>
